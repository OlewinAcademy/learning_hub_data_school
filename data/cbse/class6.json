          "Reading and writing large numbers",
          "Indian vs International System",
          "Estimation"
        ],
        "solved_examples": [
          {
            "question": "Write 4,82,376 in words (Indian System).",
            "solution": "Four lakh eighty-two thousand three hundred seventy-six."
          },
          {
            "question": "Find the successor of 9999.",
            "solution": "9999 + 1 = 10000"
          },
          {
            "question": "Write 4,52,197 in expanded form.",
            "solution": "4,00,000 + 50,000 + 2,000 + 100 + 90 + 7"
          }
        ],
        "mcqs": [
          {
            "question": "Successor of 7000?",
            "options": ["6999", "7001", "70000", "7999"],
            "answer": "7001"
          },
          {
            "question": "Smallest 5-digit number?",
            "options": ["1000", "9999", "10000", "11111"],
            "answer": "10000"
          }
        ],
        "long_questions": [
          {
            "question": "Write 95,07,326 in Indian and International systems and expanded form.",
            "points": [
              "Indian: Ninety-five lakh seven thousand three hundred twenty-six",
              "International: 9,507,326 = Nine million five hundred seven thousand three hundred twenty-six",
              "Expanded: 90,00,000 + 5,00,000 + 7,000 + 300 + 20 + 6"
            ]
          }
        ],
        "real_life_applications": [
          "Reading population & bank amounts",
          "Reading electricity/water bills",
          "Understanding price comparisons"
        ]
      }
